    "@trpc/next": "^10.0.0-proxy-beta.0",
    "@trpc/react": "^10.0.0-proxy-beta.0",
    "@trpc/server": "^10.0.0-proxy-beta.0",
    "classnames": "^2.3.2",
    "next": "12.3.1",
    "next-i18next": "^12.0.1",
    "nprogress": "^0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "react-use": "^17.4.0",
    "sharp": "^0.31.0",
    "superjson": "^1.9.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
