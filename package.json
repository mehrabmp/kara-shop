{
  "name": "kara-shop",
  "version": "1.0.0",
  "private": true,
  "description": "KARA - Fullstack E-commerce made using NextJS, TypeScript, tRPC, Prisma, NextAuth and styled with Tailwind CSS",
  "author": {
    "name": "Mehrab Mahmoudpour",
    "email": "mehrabmpdev@gmail.com"
  },
  "homepage": "https://karashop.vercel.app/",
  "bugs": {
    "url": "https://github.com/mehrabmp/kara-shop/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mehrabmp/kara-shop.git"
  },
  "engines": {
    "node": "^14 || ^16 || ^18 ",
    "yarn": ">=1.22.0 <2",
    "npm": "Please use yarn instead of NPM to install dependencies"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "run-s test:*",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "playwright test",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "vercel-build": "prisma migrate deploy && next build"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.2",
    "@prisma/client": "^4.3.1",
    "@tanstack/react-query": "^4.6.1",
