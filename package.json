{
  "name": "kara-shop",
  "version": "1.0.0",
  "private": true,
  "description": "KARA - Fullstack E-commerce made using NextJS, TypeScript, tRPC, Prisma, NextAuth and styled with Tailwind CSS",
  "author": {
    "name": "Mehrab Mahmoudpour",
    "email": "mehrabmpdev@gmail.com"
  },
  "homepage": "https://karashop.vercel.app/",
  "bugs": {
    "url": "https://github.com/mehrabmp/kara-shop/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mehrabmp/kara-shop.git"
  },
  "engines": {
    "node": "^14 || ^16 || ^18 ",
    "yarn": ">=1.22.0 <2",
    "npm": "Please use yarn instead of NPM to install dependencies"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "run-s test:*",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "playwright test",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-prod": "start-server-and-test start 3000 test",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "vercel-build": "prisma migrate deploy && next build"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@prisma/client": "^4.5.0",
    "@tanstack/react-query": "^4.13.0",
    "@trpc/client": "^10.0.0-proxy-beta.26",
    "@trpc/next": "^10.0.0-proxy-beta.26",
    "@trpc/react-query": "^10.0.0-proxy-beta.26",
    "@trpc/server": "^10.0.0-proxy-beta.26",
    "aos": "^3.0.0-beta.6",
    "classnames": "^2.3.2",
    "next": "^13.0.0",
    "next-i18next": "^12.1.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-countdown": "^2.3.3",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "react-use": "^17.4.0",
    "sharp": "^0.31.1",
    "superjson": "^1.10.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@playwright/test": "^1.27.1",
    "@types/aos": "^3.0.4",
    "@types/jest": "^29.2.1",
    "@types/node": "18.11.9",
    "@types/nprogress": "^0.2.0",
    "@types/react": "18.0.24",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.42.0",
    "autoprefixer": "^10.4.13",
    "eslint": "8.25.0",
    "eslint-config-next": "^13.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^8.0.0",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prettier": "2.7.1",
    "prisma": "^4.3.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.1",
    "ts-node": "^10.9.1",
    "typescript": "4.8.4"
  }
}
